<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background layer -->
    <item
        android:id="@+id/game_health_ui_background"
        android:drawable="@drawable/game_health_ui_base" />

    <!-- progress layer -->
    <item
        android:id="@+id/game_health_ui_progress"
        android:drawable="@drawable/game_health_ui_green" />

    <!-- top layer -->
    <item
        android:id="@+id/game_health_ui_top"
        android:drawable="@drawable/game_health_ui_underline" />

</layer-list>
