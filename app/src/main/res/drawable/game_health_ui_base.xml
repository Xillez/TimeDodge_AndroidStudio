        android:pathData="M-10,-10 L130,-10  L130,130 L-10,130 z" />

    <!-- health_bar -->
    <group
        android:name="health_bar">
        <!-- health shade -->
        <path
            android:name="shade"
            android:fillColor="@color/red_dark"
            android:pathData="M0,2 L98,2 L107,20 L10,20 z" />

        <!-- health -->
        <path
            android:name="health"
            android:fillColor="@color/red"
            android:pathData="M2,4 L96,4 L104,20 L10,20 z" />
    </group>
