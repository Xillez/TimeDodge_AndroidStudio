<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="120dp"
    android:height="20dp"
    android:viewportWidth="120"
    android:viewportHeight="20">

    <!-- hide anything outside drawing area -->
    <clip-path
        android:pathData="M0,0 L100,0 L110,20 L10,20 z" />

    <!-- health_bar -->
    <group
        android:name="health_bar">

        <!-- health shade -->
        <path
            android:name="shade"
            android:fillColor="@color/green_dark"
            android:pathData="M2,2 L98,2 L107,20 L10,20 z" />

        <!-- health -->
        <path
            android:name="health"
            android:fillColor="@color/green"
            android:pathData="M2,4 L96,4 L104,20 L10,20 z" />

    </group>

</vector>