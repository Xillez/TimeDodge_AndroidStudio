<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bulletpointgames.timedodge">

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="com.bulletpointgames.timedodge.activities.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bulletpointgames.timedodge.activities.Settings" />
        <activity
            android:name="com.bulletpointgames.timedodge.activities.GameActivity"
            android:theme="@style/AppTheme.Game"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden" />
    </application>

</manifest>